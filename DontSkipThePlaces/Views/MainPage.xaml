<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:DontSkipThePlaces" 
    xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
    x:Class="DontSkipThePlaces.MainPage"
    Title="Dont Skip The Places">

    <StackLayout>
        <Label x:Name="Lblinfo" Text="Loading Restaurants near from you..." FontSize="Large" HorizontalTextAlignment="Center"/>
        <ActivityIndicator x:Name="IndLoading" IsVisible="false" IsRunning="false"/>
        <maps:Map 
            WidthRequest="320" 
            HeightRequest="200"
            x:Name="MyMap"
            IsShowingUser="true"
            MapType="Street"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
        />
    </StackLayout>
</ContentPage>