<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:DontSkipThePlaces" 
    xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
    x:Class="DontSkipThePlaces.MainPage"
    Title="Dont Skip The Places">
    <StackLayout>
        <ActivityIndicator x:Name="IndLoading" IsVisible="false" IsRunning="false"/>
        <maps:Map 
            WidthRequest="320" 
            HeightRequest="200"
            x:Name="MyMap"
            IsShowingUser="true"
            MapType="Street"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
        />
        
        <Button Text="Search Restaurants Near from me" Clicked="BtnGetData_Clicked"/>
        <Button x:Name="BtnFilterOptions" Text="Show Filter Options" Clicked="BtnShowFilter_Clicked"/>

        <StackLayout IsVisible="false" x:Name="StcFilterOptions">
            <Entry x:Name="EntRadius" Text="5000" Placeholder="Radius in metter" Keyboard="Numeric"/>
        </StackLayout>
        

    </StackLayout>
</ContentPage>